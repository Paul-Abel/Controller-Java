<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="40dp"
                android:height="40dp"/>
            <corners
                android:radius="10dp"/>
            <gradient
                android:angle="90"
                android:centerX="35%"
                android:centerColor="#910000"
                android:startColor="#fc0303"
                android:endColor="#fc0303"
                android:type="linear" />
            <stroke android:width="10px" android:color="#000000" />
        </shape>
    </item>
</selector>